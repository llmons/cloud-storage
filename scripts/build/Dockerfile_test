# Need to package the code first `tar zcf cloud_storage.tar.gz $(ls)` and move it to the same directory as Dokerfile
# rpc server source code, used to test rpc methods
FROM golang:1.23-alpine
MAINTAINER zhufuyi "g.zhufuyi@gmail.com"

# go test dependency packages
RUN apk add bash alpine-sdk build-base gcc

COPY . /go/src/cloud_storage
WORKDIR /go/src/cloud_storage
RUN tar zxf cloud_storage.tar.gz
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go mod download
RUN rm -f cloud_storage.tar.gz

CMD ["sleep","86400"]
